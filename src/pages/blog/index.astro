---
import HeadSEO from "~/components/layouts/HeadSEO.astro";
import Header from "~/components/layouts/Header.astro";
import Footer from "~/components/layouts/Footer.astro";
import FormattedDate from "~/components/layouts/FormattedDate.astro";

import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.publishedDate.valueOf() - b.data.publishedDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="en">
  <HeadSEO />
  <body>
    <Header />
    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <FormattedDate date={post.data.publishedDate} />
                <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
