---
import { SITE_TITLE } from "~/consts/meta";
import { Image } from "@astrojs/image/components";
import { Menu } from "./menu/Menu";
import { PageType, PAGES_TO_LABEL_MAP } from "~/consts/page";

interface Props {
  page: PageType;
}

const { page } = Astro.props;
---

<header>
  <Image alt="ヒグマ" width={80} height={80} src="/bear.png" format={"png"} />
  <h2>
    {SITE_TITLE}
    <span>/</span>
    {PAGES_TO_LABEL_MAP[page]}
  </h2>
  <Menu page={page} client:load />
</header>
<style>
  header {
    background-color: #fff;
    height: 56px;
    display: flex;
  }
  span {
    font-weight: 300;
    color: #747474;
  }
  img {
    width: 40px;
    height: 40px;
    margin: 8px 0 8px 8px;
    border-radius: 20px;
  }
  h2 {
    margin: 0 12px;
    font-family: Roboto, sans-serif;
    font-size: 16px;
    font-weight: 600;
    padding: 20px 0;
  }
</style>
